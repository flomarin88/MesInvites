<%- model_class = Meal -%>
<div class="page-header">
  <h1>Mes Repas</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Numéro</th>
      <th>Date</th>
      <th>Invités</th>
      <th>Apéritif</th>
      <th>Entrée</th>
      <th>Plat</th>
      <th>Dessert</th>
      <th>Notes</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= link_to meal.id, meal_path(meal) %></td>
        <td></td>
        <td></td>
        <td><%= meal.aperitif %></td>
        <td><%= meal.starter %></td>
        <td><%= meal.course %></td>
        <td><%= meal.dessert %></td>
        <td><%= meal.notes %></td>
        <td>
          <%= link_to "Modifier",
                      edit_meal_path(meal), :class => 'btn btn-mini' %>
          <%= link_to "Supprimer",
                      meal_path(meal),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Êtes vous sûr ?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Ajouter un repas",
            new_meal_path,
            :class => 'btn btn-primary' %>
