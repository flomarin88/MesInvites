<%- model_class = Meal -%>
<div class="page-header">
  <h1>Détail du repas</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Date :</strong></dt>
  <% if @meal.meal_date %>
    <dd>
      <%= l(@meal.meal_date, :format => ("%A %d %B %Y")) %>
      <% if @meal.diner != nil %>
        <% if @meal.diner %>
          Diner
        <% else %>
          Déjeuner
        <% end %>
      <% end %>    
    </dd>
  <% else %>
    <dd><em>Non précisée</em></dd>
  <% end %>
  <dt><strong>Invités :</strong></dt>
  <% if @meal.guest %>
    <dd><%= @meal.guest.name %></dd>
  <% else %>
    <dd><em>Aucun</em></dd>
  <% end %>
  <dt><strong>Apéritif :</strong></dt>
  <dd><%= @meal.aperitif %></dd>
  <dt><strong>Entrée :</strong></dt>
  <dd><%= @meal.starter %></dd>
  <dt><strong>Plat :</strong></dt>
  <dd><%= @meal.course %></dd>
  <dt><strong>Dessert :</strong></dt>
  <dd><%= @meal.dessert %></dd>
  <dt><strong>Notes :</strong></dt>
  <dd><%= @meal.notes %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Retour",
              meals_path, :class => 'btn'  %>
  <%= link_to "Modifier",
              edit_meal_path(@meal), :class => 'btn' %>
  <%= link_to "Supprimer",
              meal_path(@meal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Êtes vous sûr ?')) },
              :class => 'btn btn-danger' %>
</div>
